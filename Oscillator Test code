//start variables
let oscillator;
let playing = false; //it starts turned off
let osciButton;

function setup() {
  createCanvas(0,0);
  
  //button setup
  osciButton = createButton('start/stop sound');
  osciButton.mousePressed(osciPlay);
  
  //oscillator setup
  osc = new p5.Oscillator();
  osc.setType('sine');
  osc.freq(350);
  osc.amp(0);
  osc.start();
}

function draw() {
  background(220);
}

function osciPlay(){
    if (!playing) {
      // ramp amplitude to 0.5 over 0.05 seconds
      osc.amp(0.5, 0.05);
      playing = true;
    } else {
      // ramp amplitude to 0 over 0.5 seconds
      osc.amp(0, 0.5);
      playing = false;
    }
}
